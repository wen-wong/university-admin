{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": [
		"src/**/*",
		"src/node_modules"
	],
	"exclude": [
		"node_modules/*"
	],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	}
}